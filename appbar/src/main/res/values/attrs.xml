<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ClassicHeaderBar">
        <!-- 系统栏参数 -->
        <attr name="chb_status_bar_height" format="dimension" />
        <attr name="chb_left_system_bar_width" format="dimension" />
        <attr name="chb_right_system_bar_width" format="dimension" />
        <attr name="chb_system_bars_yield_enable" format="boolean" />
        <!-- 基本参数 -->
        <attr name="chb_header_bar_height" format="dimension" />
        <!-- 背景参数 -->
        <attr name="chb_bkg" format="reference|color" />
        <attr name="chb_bkg_blur_enable" format="boolean" />
        <attr name="chb_bkg_blur_radius" format="float" />
        <attr name="chb_bkg_blur_overlay" format="color" />
        <attr name="chb_bkg_blur_overlay_alpha" format="float" />
        <!-- 左侧按钮参数 -->
        <attr name="chb_left_btn_enable" format="boolean" />
        <attr name="chb_left_btn_src" format="reference" />
        <attr name="chb_left_btn_tint" format="color" />
        <attr name="chb_left_btn_margin_start" format="dimension" />
        <!-- 标题参数 -->
        <attr name="chb_title" format="string" />
        <attr name="chb_title_color" format="color" />
        <attr name="chb_title_gravity">
            <enum name="chb_start_with_left_btn" value="0" />
            <enum name="chb_center" value="1" />
            <enum name="chb_in_front_of_right_btn" value="2" />
        </attr>
        <attr name="chb_title_margin_start" format="dimension" />
        <attr name="chb_title_margin_end" format="dimension" />
        <!-- 右侧按钮参数 -->
        <attr name="chb_right_btn_enable" format="boolean" />
        <attr name="chb_right_btn_src" format="reference" />
        <attr name="chb_right_btn_tint" format="color" />
        <attr name="chb_right_btn_margin_end" format="dimension" />
    </declare-styleable>
</resources>